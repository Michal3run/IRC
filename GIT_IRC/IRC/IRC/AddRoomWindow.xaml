<Window x:Class="IRC.AddRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        Title="AddRoomWindow" Height="215" Width="327">
    <Grid Background="Black" Margin="0,0,2,-2">
        <Label x:Name="nazwa" Content="Wpisz nazwę pokoju:" HorizontalAlignment="Left" Margin="24,35,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial" FontWeight="Bold"/>
        <Label x:Name="max" Content="Określi maksymalną liczbę osób:" HorizontalAlignment="Left" Margin="24,73,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial" FontWeight="Bold" Width="201"/>
        <TextBox x:Name="RoomName" HorizontalAlignment="Left" Height="23" Margin="160,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" FontWeight="Bold" FontFamily="Arial"/>
        <Button x:Name="CreateRoom" Content="Stwórz!" HorizontalAlignment="Left" Margin="128,139,0,0" VerticalAlignment="Top" Width="75" Background="#FF1753A1" FontFamily="Arial" FontSize="13" FontWeight="Bold" Click="CreateRoom_Click"/>
        <wpfTool:IntegerUpDown x:Name="OccupancyInteger" Grid.Row="0" Margin="230,65,10,88" AllowSpin="True" AllowTextInput="False" DefaultValue="10" DisplayDefaultValueOnEmptyText="True" Minimum="2" Maximum="200" MouseWheelActiveTrigger="MouseOver">

        </wpfTool:IntegerUpDown>
    </Grid>
</Window>
